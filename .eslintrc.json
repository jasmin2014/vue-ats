{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "arrow-spacing": 1, // 强制箭头函数的箭头前后使用一致的空格
    "no-var": "error",
    "semi": 0,
    "init-declarations": 1,
    "no-extra-semi": 2,
    "quotes": [2, "single"], // 使用单引号
    "no-extra-parens": 2, // 禁止不必要的括号
    "space-before-function-paren": "off",
    "no-cond-assign": 2, // 禁止条件表达式中出现赋值操作符
    "no-dupe-args": 2, // 禁止function 定义中出现重名参数
    "no-dupe-keys": 2, // 禁止对象字面量中出现重复的 key
    "no-dupe-class-members": 2, // 禁止类成员中出现重复的名称
    "no-duplicate-case": 2, // 禁止出现重复的 case 标签
    "no-empty": 2, // 禁止出现空语句块
    "no-extra-boolean-cast": 1, // 禁止不必要的布尔转换
    "no-ex-assign": 2, // 禁止对 catch 子句的参数重新赋值
    "no-irregular-whitespace": 1, // 禁止在字符串和注释之外不规则的空白
    "no-unexpected-multiline": 1, // 禁止出现令人困惑的多行表达式
    "no-redeclare": 2, // 禁止多次声明同一变量
    "no-shadow": 2, // 禁止变量声明与外层作用域的变量同名
    "no-unused-vars": 1, // 禁止出现未使用过的变量
    "no-useless-call": 2, // 禁止不必要的 .call() 和 .apply()
    "no-const-assign": 2, // 禁止修改 const 声明的变量
    "prefer-arrow-callback": 2, // 要求使用箭头函数作为回调
    "linebreak-style": 0, // 强制使用一致的换行风格
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "no-this-before-super": "warn",
    "no-undef": "off",
    "no-unreachable": "warn",
    "constructor-super": "warn",
    "valid-typeof": 1,
    "eol-last": 2,
    "func-call-spacing": "off",
    "eqeqeq": 1,
    "object-curly-spacing": 0,
    "no-extend-native": "off"
  },
  "plugins": [
    "html"
  ],
  "extends": "vue"
}
